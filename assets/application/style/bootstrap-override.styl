ul, ol
    margin 0

.table-pointer tr
    cursor pointer
    
.sticky-bottom
    position: -webkit-sticky
    position: sticky
    bottom: 0
    z-index: 1020
    
    &-1
        bottom: 1rem

pre
    color inherit
    
.traceback
    &-line
        &-code
            display inline-block
            margin-bottom 10px

.nowrap {
    white-space: nowrap
}

.modal-backdrop
    opacity .5
    
    &.fade
        opacity 0
    &.show
        opacity .5